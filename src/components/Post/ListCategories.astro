---
import { getPostCategories } from '@/data/posts'
import Category from '@/components/Post/PostCategories.astro'

type Props = {
	activeCategory?: string
}

const categories = await getPostCategories()

const { activeCategory } = Astro.props
---

<div class='relative flex flex-wrap min-w-full gap-5'>
    <Category />
    {categories.map((category: string) => (
        <Category name={category} activeCategory={activeCategory} />
    ))}

    <div class='hidden sm:block absolute w-full bottom-0 border-b-2 -z-40 border-fg border-opacity-25'></div>
</div>
