---
import Icon from '@/components/icons/Icon.astro'
import { GetSkillIcon } from '@/utils/SkillIcons'

const {
    for: iconFor,
    fallback,
    hideNotFound,
    ...props
} = Astro.props

const icon = GetSkillIcon(iconFor, hideNotFound ? '' : fallback)

const hide = hideNotFound && !icon
---

{!hide && <Icon name={icon} title={iconFor} {...props} />}
