---
const {
	title,
	subtitle,
	dates,
	image,
} = Astro.props
---

<article>
	<div class="flex justify-between items-center">
		<div class="w-[2px] self-stretch bg-gradient-to-b from-primary to-transparent before:content-['']"></div>
		<div class="pl-2 grow">
			<div class="flex items-center">
				<h4 class="text-lg font-bold">{title}</h4>
				{image && <img src={image} alt="" class="text-lg h-[1em] pl-4" />}
			</div>
			<div>{subtitle}</div>
		</div>
		<div class="text-sm opacity-80">{dates}</div>
	</div>
	<p class="mt-4 text-sm"><slot /></p>
</article>
