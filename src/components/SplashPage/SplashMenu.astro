---
import type { HTMLAttributes } from 'astro/types'

type Props = HTMLAttributes<'nav'>

const { ...props } = Astro.props
---

<nav {...props}>
    <slot />
</nav>

<style>
    nav {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 4rem;
        @apply text-xl font-loto;
    }
</style>
